<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="30dp">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp" >
    </EditText>

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="30sp"
        android:gravity="right">

    </TextView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bclear"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="C"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bdiv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b9"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bmul"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bsub"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="30sp" />
        <Button
            android:id="@+id/b0"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="30sp" />
        <Button
            android:id="@+id/badd"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="30sp" />
        <Button
            android:id="@+id/bresult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="="
            android:textSize="30sp" />
    </TableRow>

</TableLayout>

